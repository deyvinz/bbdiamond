# Production Environment Variables
# Copy this to .env.local and fill in your actual values

# Deployment Mode
# Options: "saas" (multi-tenant shared instance) or "self-hosted" (single wedding per deployment)
DEPLOYMENT_MODE=saas

# Self-Hosted Mode Configuration (only used when DEPLOYMENT_MODE=self-hosted)
# For self-hosted deployments, specify the default wedding ID
# DEFAULT_WEDDING_ID=your_wedding_uuid_here

# Localhost Testing Configuration (development only)
# Enable/disable localhost subdomain testing features
# Defaults to true in development mode
# ENABLE_LOCALHOST_TESTING=true

# Application URL (used for email links, QR codes, etc.)
# For SaaS: your platform domain (e.g., https://weddingplatform.com)
# For self-hosted: your wedding domain (e.g., https://johnandsarah.com)
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE=your_supabase_service_role_key_here

# Supabase Storage Configuration (for wedding-specific assets)
# Default bucket name pattern: "wedding-{wedding_id}"
# Or use a custom bucket structure
NEXT_PUBLIC_STORAGE_BUCKET_PREFIX=wedding-

# Cache Configuration
CACHE_PROVIDER=redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_USERNAME=default
CACHE_NAMESPACE=wg
CACHE_GUESTS_TTL_SECONDS=120
CACHE_JITTER_SECONDS=20

# Next.js Configuration
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# Optional: If using Upstash instead of Redis
# CACHE_PROVIDER=upstash
# UPSTASH_REDIS_REST_URL=your_upstash_url_here
# UPSTASH_REDIS_REST_TOKEN=your_upstash_token_here

# Analytics & Tracking
# Google Analytics 4 Measurement ID (e.g., G-XXXXXXXXXX)
NEXT_PUBLIC_GA_MEASUREMENT_ID=your_ga_measurement_id_here
# Optional: Custom analytics endpoint for event tracking
# NEXT_PUBLIC_ANALYTICS_ENDPOINT=https://your-analytics-api.com/events

# Email Service (Resend)
# Required for contact form and transactional emails
RESEND_API_KEY=your_resend_api_key_here
# Support/Contact email for receiving contact form submissions
SUPPORT_EMAIL=hello@luwani.com
CONTACT_EMAIL=hello@luwani.com